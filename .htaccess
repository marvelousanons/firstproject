<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Kalau file atau folder memang ada â†’ jangan di-redirect
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Arahkan semua request ke index.php
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>




